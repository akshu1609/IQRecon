{
  "compilerOptions": {
    "target": "es5", // Specify ECMAScript target version
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Specify library files to be included in the compilation
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Ensure that casing of filenames is consistent
    "noEmit": true, // Do not emit output files
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "module": "esnext", // Specify module code generation
    "moduleResolution": "node", // Specify module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON modules
    "isolatedModules": true, // Ensure that each file can be safely transpiled independently
    "jsx": "preserve", // JSX code generation mode
    "incremental": true, // Enable incremental compilation
    "baseUrl": "./", // Base directory for resolving non-relative module names
    "paths": {
      "@/*": ["src/*"] // Path mappings for module resolution
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts", // Type definitions for Next.js
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx", // Include all TypeScript files with JSX
    ".next/types/**/*.ts" // Include Next.js type definitions
  ],
  "exclude": [
    "node_modules" // Exclude node_modules directory
  ]
}
